{
    "name": "webignition/basil-runner",
    "description": "Runs tests written in basil",
    "keywords": [],
    "homepage": "https://github.com/webignition/basil-runner",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\BasilRunner\\": "src",
            "webignition\\BasilRunner\\Bin\\": "bin",
            "webignition\\BasilRunner\\Generated\\": "generated"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\BasilRunner\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs",
        "static-analysis": "./vendor/bin/phpstan analyse",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ],
        "compiler-remove": "rm -f compiler.phar",
        "compiler-fetch": [
            "curl -L https://github.com/webignition/basil-cli-compiler/releases/latest/download/compiler.phar --output compiler.phar",
            "chmod +x compiler.phar"
        ],
        "runner-remove": "rm -f runner.phar",
        "runner-fetch": [
            "curl -L https://github.com/webignition/basil-cli-runner/releases/latest/download/runner.phar --output runner.phar",
            "chmod +x runner.phar"
        ],
        "setup": [
            "@composer install --ansi",
            "@compiler-remove",
            "@compiler-fetch",
            "@runner-remove",
            "@runner-fetch"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "phpunit/phpunit": "~9",
        "symfony/console": "^5.1",
        "symfony/yaml": "^5.1",
        "webignition/base-basil-test-case": "^0.27.0",
        "webignition/basil-compiler": "^0.15.0",
        "webignition/basil-dom-identifier-factory": "^0.13.0",
        "webignition/basil-loader": "^0.27.0",
        "webignition/basil-models": "^0.56",
        "webignition/php-basil-compilable-source-factory": "^0.51.0",
        "webignition/symfony-console-typed-input": "^0.5.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "php-mock/php-mock": "^2.1",
        "php-mock/php-mock-mockery": "^1.3",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.0",
        "phpstan/phpstan-mockery": "^0.12.0",
        "squizlabs/php_codesniffer": "3.*",
        "webignition/basil-data-validator": ">=0.14,<1",
        "webignition/basil-parser": ">=0.25,<1",
        "webignition/basil-phpunit-result-printer": "^0.1.0",
        "webignition/object-reflector": ">=0.1,<1",
        "webignition/symfony-panther-webserver-runner": ">=0.3,<1"
    },
    "bin": [
        "bin/basil-runner"
    ],
    "config": {
        "sort-packages": true
    }
}
